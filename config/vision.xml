<?xml version="1.0" encoding="UTF-8"?>
<edu.tigers.sumatra.vision base="edu.tigers.sumatra.vision">
    <BallFilter>
        <alwaysUseMergedBallVelocity>false</alwaysUseMergedBallVelocity>
    </BallFilter>
    <BallFilterPreprocessor>
        <minSearchRadius>300.0</minSearchRadius>
    </BallFilterPreprocessor>
    <CamFilter>
        <invisibleLifetimeBall>1</invisibleLifetimeBall>
    </CamFilter>
    <kick>
        <detectors>
            <EarlyKickDetector>
                <camClearTimeout>0.1</camClearTimeout>
                <directionThreshold>20.0</directionThreshold>
                <nearBotLimit>500.0</nearBotLimit>
                <velocityThreshold>2000.0</velocityThreshold>
                <velocityThresholdDirection>3000.0</velocityThresholdDirection>
            </EarlyKickDetector>
        </detectors>
        <estimators>
            <ChipKickEstimator>
                <maxFailures>12</maxFailures>
                <maxFittingError>200</maxFittingError>
                <minRecords>8</minRecords>
                <stopVelEstimationFactor>1.3</stopVelEstimationFactor>
            </ChipKickEstimator>
            <StraightKickEstimator>
                <maxDirectionError>20.0</maxDirectionError>
                <maxFittingError>100.0</maxFittingError>
                <numInitialKickVelSamples>10</numInitialKickVelSamples>
            </StraightKickEstimator>
        </estimators>
        <validators>
            <DirectionValidator>
                <maxAngleDiff>45.0</maxAngleDiff>
            </DirectionValidator>
            <DistanceValidator>
                <atLeastOneBeyondDist>160.0</atLeastOneBeyondDist>
                <thresholdDist1>130.0</thresholdDist1>
                <thresholdDist2>150.0</thresholdDist2>
            </DistanceValidator>
            <InFrontValidator>
                <minDistanceInFront>70.0</minDistanceInFront>
                <minDistanceOrthogonal>40.0</minDistanceOrthogonal>
            </InFrontValidator>
            <VelocityValidator>
                <minVelocity>600.0</minVelocity>
            </VelocityValidator>
        </validators>
    </kick>
    <QualityInspector>
        <maxHeightDifference>400</maxHeightDifference>
    </QualityInspector>
    <tracker>
        <BallTracker>
            <initialCovarianceXY>1000.0</initialCovarianceXY>
            <maxLinearVel>15000.0</maxLinearVel>
            <measError>100.0</measError>
        </BallTracker>
        <RobotTracker>
            <measErrorXY>20.0</measErrorXY>
            <predictionTime>0.025</predictionTime>
        </RobotTracker>
    </tracker>
    <ViewportArchitect>
        <maxViewportOverlap>400</maxViewportOverlap>
    </ViewportArchitect>
</edu.tigers.sumatra.vision>
